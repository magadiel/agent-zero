# Control Layer Environment Variables
# Copy this file to .env and update with your values

# API Configuration
CONTROL_API_KEY=your-secure-api-key-here
JWT_SECRET=your-jwt-secret-here

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///app/control/storage/audit.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://control_user:control_pass@postgres:5432/control_db
POSTGRES_PASSWORD=control_pass

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Service Dependencies
# Format: host:port,host:port
WAIT_FOR_SERVICES=redis:6379,postgres:5432

# Logging
LOG_LEVEL=INFO

# Performance
MAX_WORKERS=4

# Time Zone
TZ=UTC

# Environment
CONTROL_ENV=production